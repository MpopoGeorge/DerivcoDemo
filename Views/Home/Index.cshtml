@model IEnumerable<DerivcoDemo.Models.CustomerOrder>

@{
    ViewBag.Title = "Index";
}
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4 pt-4">
    <div class="d-sm-flex align-items-start justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800"><i class="fas fa-fw fa-shopping-cart text-primary"></i> Current Orders</h1>
    </div>
    <div class="d-sm-flex align-items-end justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800"><i class="fas fa-fw fa-tachometer-alt text-default"></i>  Dashboard</h1>
    </div>
</div>

<div class="d-sm-flex flex-row-reverse mb-4">
    <a href="@Url.Action("Index", "Shopping")" class="btn btn-outline-success btn-sm">
        <i class="fas fa-fw fa-plus"></i>
    </a>
</div>

<table class="table table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th><i class="fas fa-tasks"></i> Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Home", new { id = item.OrderId })" class="btn btn-outline-warning btn-sm">
                    <i class="fas fa-fw fa-pencil-alt"></i>
                </a>
                <a href="@Url.Action("Details", "Home", new { id = item.OrderId })" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-fw fa-eye"></i>
                </a>
                <a href="@Url.Action("Delete", "Home", new { id = item.OrderId })" class="btn btn-outline-danger btn-sm">
                    <i class="fas fa-fw fa-trash"></i>
                </a>
            </td>
        </tr>
    }

</table>
