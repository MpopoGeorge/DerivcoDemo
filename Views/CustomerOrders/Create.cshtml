@model DerivcoDemo.Models.CustomerOrder

@{
    ViewBag.Title = "Create";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4 pt-4">
    <div class="d-sm-flex align-items-start justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800"><i class="fas fa-fw fa-plus text-primary"></i> Add Customer</h1>
    </div>
    <div class="d-sm-flex align-items-end justify-content-between mb-4">
        <h1 class="h5 mb-0 text-gray-800"><i class="fas fa-fw fa-cart-plus text-default"></i> Customer Orders</h1>
    </div>
</div>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
